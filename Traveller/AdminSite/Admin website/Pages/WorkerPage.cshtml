@page
@model Admin_website.Pages.WorkerPageModel
@{
	ViewData["Title"] = "WorkerPage";
}
<Main style="height: 1550px;">
	<component type="typeof(Pages.CustomComponents.Nav)" render-mode="ServerPrerendered" />
	<div id="ListOfWorksBox" class="box">
		<component type="typeof(Pages.CustomComponents.ListOfWorkers)" render-mode="ServerPrerendered" />
	</div>
	<div id="WorkerLeftBox">
		<div class="box">
			<form method="post">
				<label for="inputText">Input:</label>
				<input type="text" name="inputNameCreate" id="inputText" placeholder="Name" />
				<button type="submit" asp-page-handler="Create">Create</button>
			</form>
		</div>
		<div class="box">
			<form method="post">
				<label for="inputText">Input:</label>
				<input type="text" name="inputuuid" id="inputText" placeholder="uuid" />
				<input type="text" name="inputName" id="inputText" placeholder="Name" />
				<button type="submit" asp-page-handler="Update">Update</button>
				<button type="submit" asp-page-handler="Delete">Delete</button>
			</form>
		</div>
	</div>
</Main>